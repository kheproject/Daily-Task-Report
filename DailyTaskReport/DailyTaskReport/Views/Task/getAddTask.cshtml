<div class="add-task-holder">
    <div> Add Task </div>
    <div class="add-task-content">
        @using (Html.BeginForm("addTasks", "Task", FormMethod.Post, new { @id = "frmAddTask", @class = "add-task-content" }))
        {
            <div>
                @Html.TextBoxFor(m => m.encUser, new { @style = "display: none;", Value = @Session["_user"] })
                <b>Date</b> : @Html.TextBoxFor(m => m.dateTime, new { @type = "date" })
            </div>
            <div id="todaystasks">

                @*<div class="col-md-12">
                    <div class="col-md-8">
                        <div class="col-xs-6">
                            Time
                                 : @Html.TextBoxFor(m => m.taskLists[0].timeFrom, new { @type = "time" })
                                 ─ @Html.TextBoxFor(m => m.taskLists[0].timeTo, new { @type = "time" })
                        </div>
                        <div class="col-xs-6">

@model DailyTaskReport.Models.user_tasks
<script>
    if ("@Session["_user"]" == "") {
        console.log("Session expired.");
        promptMsg("Current session has expired. <br /> Please login again", true);
    }
    else {
        $(function () {
            toggleUIBlocker(false);
        });
    }
</script>
<style>
    div#task-page {
        line-height: 0.5;
    }
    div#task-page > div.title-separator {
        height: 10px;
        border-bottom: 2px solid white;
        border-left: 2px solid white;
    }
    div#task-page > span {
        margin-left: 15px;
        font-size: 20px;
        font-weight: bold;
    }
    div.task-content {
        padding: 10px 0;
        line-height: 1.5;
        background: rgba(36,0,0,0.3);
        margin: 15px auto 0 auto;
        max-height: 500px;
        max-width: 700px;
        overflow-y: scroll;
        display: block;
    }
    div.task-content > div {
        padding: 10px 20px;
        margin: 0px;
    }
    div.date-content {
        background: rgba(36,0,0,0.9);
        padding: 10px;
        display: inline-block;
    }
    div.data-content > div {
        padding: 0;
        background: rgba(36,0,0,0.2);
    }
    div.data-content > div:nth-child(2n) {
        background: rgba(36,0,0,0.5);
    }
    div.data-content > div > div {
        padding: 10px 0;
        display: inline-block;
        float: left;
    }
    div.data-content > div > div > div {
        padding: 0 -15px;
    }
    div.data-content > div > div > div > div {
        padding: 0
    }
    div.task-options {
        margin: 15px auto 0 auto;
        width: 426px;
    }
    div.task-options > ul {
        list-style: none;
        line-height: 40px;
        margin: 0px;
    }
    div.task-options > ul > li {
        float: left;
        background-color: rgba(50,0,0,0.9);
    }
    div.task-options > ul > li > a {
        transition-duration: 0.3s;
        text-decoration: none;
        display: block; 
        padding: 0 10px;
        cursor: pointer;
        color: lightgrey;
        border-bottom: 3px solid rgba(36,0,0,0.0);
    }
    div.task-options > ul > li > a:hover {
        border-bottom: 3px solid rgba(255,250,250,0.9);
        color: #fffde1;
    }
</style>
<div id="task-page" class="container">
    <span>Task</span> ─ Let's see what you have in store ...
    <div class="title-separator"></div>
    <div class="task-options container">
        <ul class="container">
            <li>
                <a onclick="addTaskForm()">Add Task</a>
            </li>
            <li>
                <a onclick="promptMsg('Edit Task feature is not available')">Edit Task</a>
            </li>
            <li>
                <a onclick="promptMsg('Search Task feature is not available')">Search Task</a>
            </li>
            <li>
                <a onclick="promptMsg('Delete Task feature is not available')">Delete Task</a>
            </li>
        </ul>
    </div>
    <div class="task-content">
        @{  foreach (var data in Model.tasks)
            {
                <div>
                    <div class="date-content ">@data.task_date.ToString("D")</div>
                    <div class="data-content">
                        @foreach (var tasks in data.taskLists)
                        {
                            <div class="container col-md-12">
                                <div class="col-xs-6">
                                    <div class="container col-xs-12">
                                        <div class="col-xs-5">
                                            Time
                                        </div>
                                        <div class="col-xs-7">
                                            @tasks.timeFrom ─ @tasks.timeTo
                                        </div>
                                    </div>
                                    <div class="container col-xs-12">
                                        <div class="col-xs-5">Work Order No.</div>
                                        <div class="col-xs-7">@tasks.woNo</div>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-3">
                                        Task
                                    </div>
                                    <div class="col-xs-9" style="padding-left: 0;">
                                        <textarea style="width: 100%; resize: none;" readonly draggable="false">@tasks.task</textarea>
                                    </div>
                                </div>
                                @using (Html.BeginForm("removeTask", "Task", FormMethod.Post, new { @style = "display: none;" }))
                                {
                                    @Html.TextBoxFor(m => data.task_date)
                                    @Html.TextBoxFor(m => tasks.taskID, new { @style="display: none;" });
                                    <button class="fontWhite bgcred" type="button" onclick="promptMsg('remove task feature is not yet available')">remove task</button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            if (ViewBag.message != null)
            {
                <div style="text-align: center;">@ViewBag.message</div>
            }
        }
    </div>
</div>

<script>
    function blockContent(){
        $('div#uiBlocker').removeClass('elementHide');
        $('div#uiBlocker').addClass('elementShow');
    }
    function unblockContent() {
        $('div#uiBlocker').removeClass('elementShow');
        $('div#uiBlocker').addClass('elementHide');
    }
</script>